# Database Configuration
# Set USE_MYSQL=True to use MySQL, False to use SQLite
USE_MYSQL=True

# Option 1: Use DATABASE_URL (single connection string) - RECOMMENDED FOR SEVALLA
# Replace with your actual Kinsta MySQL credentials
DATABASE_URL=mysql://USERNAME:PASSWORD@HOST:PORT/DATABASE

# Option 2: Use individual MySQL credentials (Kinsta)
DB_NAME=your-database-name
DB_USER=your-username
DB_PASSWORD=your-password
DB_HOST=your-host.proxy.kinsta.app
DB_PORT=30156

# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,your-sevalla-domain.com

